{
  "name": "Qiita Notification",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Show notifications from Qiita.",
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "alarms",
    "http://qiita.com/",
    "https://qiita.com/"
  ]
}